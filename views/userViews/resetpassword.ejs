<script>
  document.getElementById('formId1').addEventListener('submit', async function (event) {
    event.preventDefault();
    var otpInputs = document.getElementById("otpId").getElementsByTagName("input");
    const email=document.getElementById('email').innerText;
    console.log(otpInputs);
    console.log(email);
   
    // Concatenate the values of all input elements
    let otpValue = "";
    for (var i = 0; i < otpInputs.length; i++) {
      otpValue += otpInputs[i].value;
 
  
    }
    console.log(otpValue);
 
    const formdata3 = {
        
      otp: otpValue,
    }
    console.log(formdata3);
     fetch('/forgot-otp', {
      method: 'post',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formdata3)
    })
      .then(response => response.json())
      .then(data => {
        if (data.success===false) {
          Swal.fire({
            title: 'Error!',
            text: 'You  entered OTP is not Correct.',
            icon: 'error',
          })

        } else {
          window.location.href = `/resetuser/${email}`;
        }
      }).catch(error => {
        console.error('Error during OTP verification:', error);
      

      })
  })
 


  







</script>

