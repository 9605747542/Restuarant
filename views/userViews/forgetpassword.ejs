    document.getElementById('forgotbtn').addEventListener('click',async function(event){
        event.preventDefault();
 
    const email = document.getElementById('email1').value;  // Fix the variable name and get the value from the input field
    console.log(email);

    const response = await fetch('/submit2', {
        method: 'POST',  // Specify the method, assuming it's a POST request
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),  // Pass the email as an object
    });

    if (response.ok) {
        const data1 = await response.json(); 
        console.log(data1); // Await the JSON parsing
        if (data1.success === true) {
            Swal.fire({
                title: 'Success',
                text: data1.message,
                icon: 'success'
            });
            window.location.href = `/resetpassword/${email}`;
        } else {
            Swal.fire({
                title: 'Error',
                text: data1.message,
                icon: 'error'
            });
        }
    } else {
        console.log("Response is not ok in frontend");
